{
  "name": "calendar-app",
  "version": "1.0.0",
  "main": "electron.js",
  "repository": "https://github.com/pukkok/calendar-app.git",
  "author": "pukkok <krystalgggg@gmail.com>",
  "license": "MIT",
  "homepage": "./",
  "scripts": {
    "electron-start": "wait-on http://localhost:3000 && electron .",
    "clean": "rimraf dist",
    "build": "react-scripts build",
    "electron-pack": "yarn build && copy electron.js build\\ && electron-builder",
    "react-start": "react-scripts start",
    "start": "concurrently \"yarn react-start\" \"yarn electron-start\""
  },
  "build": {
    "appId": "com.pukkok.calendarapp",
    "productName": "Calendar App",
    "files": [
      "build/**/*",
      "electron.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "dependencies": {},
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
